@model ProiectMDS.Models.Product


<h2 class="text-center mt-5">Adaugare produs</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form enctype="multipart/form-data" method="post" asp-action="New" asp-controller="Products">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Titlu produs</label>
                    <br />
                    <input asp-for="Title" class="form-control" />

                    <!-- Mesaj de validare pentru titlu -->
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Descriere produs</label>
                    <br />
                    <textarea asp-for="Description" class="form-control summernote"></textarea>

                    <!-- Mesaj de validare pentru continut -->
                    <span asp-validation-for="Description" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label">Pret produs</label>
                    <br />
                    <textarea asp-for="Price" class="form-control"></textarea>

                    <!-- Mesaj de validare pentru continut -->
                    <span asp-validation-for="Price" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Stock" class="form-label">Stoc</label>
                    <br />
                    <textarea asp-for="Stock" class="form-control"></textarea>

                    <!-- Mesaj de validare pentru continut -->
                    <span asp-validation-for="Stock" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label for="CategoryId">Selectati categoria</label>
                    <br />
                    <select asp-for="CategoryId" asp-items="Model.Categ" class="form-control">
                        <option value="">Selectati categoria</option>
                    </select>

                    <!-- Mesaj de validare pentru CategoryId -->
                    <span asp-validation-for="CategoryId" class="text-danger"></span>

                    <br />
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl">Incarca Imaginea</label>
                    <input asp-for="ImageUrl" class="form-control" type="file" name="files" />
                </div>
                <br />
                <div class="d-flex justify-content-center">
                    <button class="btn btn-success" type="submit">Adauga produs</button>
                </div>
            </form>
        </div>
    </div>
</div>


