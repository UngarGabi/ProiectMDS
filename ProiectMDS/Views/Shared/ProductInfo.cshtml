@model ProiectMDS.Models.ProductCommentViewModel

<div class="card-body">
    <img src="@Model.Product.ImageUrl" class="img-fluid rounded-3 align-content-center" alt="Imagine produs" height="300" width="300" />

    <h3 class="card-title">@Model.Title</h3>

    <div class="d-flex justify-content-between flex-row mt-5">
        <div><i class="bi bi-globe"></i> @Model.Product.Category?.CategoryName</div>
        <div><i class="bi bi-person"></i> @Model.Product.User?.UserName</div>
    </div>

    <br />
    <h5 class="d-flex justify-content-center">@Model.Product.Price lei</h5>
</div>
