@model ProiectMDS.Models.Category
@{
    ViewBag.Title = "Afisare categorie";
}


<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="d-flex flex-wrap justify-content-center">
        <div class="card m-2" style="width: 18rem;">
            <div class="card-body">
                <p>@Model.CategoryName</p>
                <form method="post" asp-controller="Categories" asp-action="Delete"
                      asp-route-id="@Model.Id">
                    <div class="d-flex justify-content-center">
                        
                        <button class="btn btn-danger" type="submit">Sterge categoria</button>
                    </div>

                </form>

                <br />
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center" style="width: 18rem;">
    <a class="btn alert-success" href="/Categories/Index/">Afisare lista categorii</a>

</div>
<br />
<hr />
<br />

