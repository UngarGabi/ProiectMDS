@{
    ViewBag.Title = "Bun venit la Magazinul online de imbracaminte!";
}

<div class="container mt-5">
    <!-- Banner principal -->
    <div class="jumbotron text-center bg-light p-5 rounded">
        <h1 class="display-4">Bun venit la <span class="text-primary color-#a11b62">Glow Boutique</span>!</h1>
        <p class="lead">Descopera universul nostru dedicat frumusetii si aspectului ingrijit. Fiecare produs a fost ales cu grija pentru a te ajuta sa stralucesti in fiecare zi.</p>
        <hr class="my-4">
        <p>
            Inspiram frumusetea delicata prin produse de calitate superioara, adaptate pentru tine.
        </p>
        <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Products")" role="button">Vezi Produsele</a>
    </div>

    <!-- Testimoniale -->
    <h2 class="text-center my-5">Ce spun clientii nostri</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <blockquote class="blockquote">
                <p>"Articole incredibile! Tinutele mele nu au aratat niciodata atat de bine!"</p>
                <footer class="blockquote-footer">Ana, București</footer>
            </blockquote>
        </div>
        <div class="col-md-4 mb-4">
            <blockquote class="blockquote">
                <p>"Recomand cu caldura! Comanda mea a ajuns rapid si totul a fost excelent."</p>
                <footer class="blockquote-footer">Ioana, Cluj</footer>
            </blockquote>
        </div>
        <div class="col-md-4 mb-4">
            <blockquote class="blockquote">
                <p>"Rochiile sunt superbe, iar fustele sunt comode toată ziua. Perfecte pentru mine!"</p>
                <footer class="blockquote-footer">Maria, Timișoara</footer>
            </blockquote>
        </div>
    </div>


</div>
